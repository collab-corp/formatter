{
    "name": "collab-corp/formatter",
    "description": "Formatting utility package for php",
    "license": "MIT",
    "type": "library",
    "keywords": ["php", "formatting", "input formatting", "sanitize", "sanitize input"],
    "authors": [
        { "name": "Sergio Compean", "email": "scompean24@gmail.com" },
        { "name": "Jonas Hansen", "email": "jonas.kerwin.hansen@gmail.com" }
    ],
    "require": {
        "php" : "^8.0",
        "illuminate/support": "~7.0|^8.0|^9.0",
        "illuminate/validation": "~7.0|^8.0|^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "CollabCorp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CollabCorp\\Formatter\\Tests\\": "tests/"
        },
        "files": [
            "./tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
